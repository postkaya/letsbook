<% provide(:title, "Almost done..") %>

<div class="container-fluid">
  <div class="row d-flex justify-content-between">
    <div class="col-md-6">
      <%= render 'providers/shared/gallery' %>

      <div class="complete-wrapper">
        <div class="complete-wrapper__header mt-3">
          <h2 class="header__title">Finish Booking</h2>
          <h4 class="header__sub-title">
          If you create an account, you do not need to enter your details each time you <br> book -  <%= link_to("Register here", new_user_registration_path) %>.
          </h4>
        </div>
        <div class="complete-wrapper__body mt-4">
          <form method="post" action="">
            <div class="form-row">
              <div class="form-group col">
                <label for="first_name">First Name</label>
                <input type="text" name="first_name" class="form-control" placeholder="First Name">
              </div>
              <div class="form-group col">
                <label for="last_name">Last Name</label>
                <input type="text" name="last_name" class="form-control" placeholder="Last Name">
              </div>
            </div>
            <div class="form-group">
              <label for="email">Email Address</label>
              <input type="text" name="email" class="form-control" placeholder="Email Address">
              <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group">
              <label for="phone">Phone Number</label>
              <input type="text" name="phone" class="form-control" id="phone" placeholder="Phone Number">
              <small id="emailHelp" class="form-text text-muted">We'll never share your phone number with anyone else.</small>
            </div>
            
            <button type="submit" class="button button--primary">
            Submit
            <%= open_iconic 'icon ic-white', :account_login %>
            </button>
          </form>
        </div>
      </div>
    </div>

    <%= render 'providers/shared/sidebar' %>
  </div>
</div>