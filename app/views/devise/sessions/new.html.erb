<% provide(:title, "Get Started") %>

<div class="wrapper">
  <div class="form-login-wrapper">
    <div class="form-wrapper__header">
      <h2 class="text-center">letsbook</h2>
      <p class="text-center">Glad you're back, let's proceed...?</p>
      <!-- <%= render 'devise/shared/links' %> -->
    </div>

    <div class="form-wrapper__sub-header mb-1">
      <div class="social-login d-flex justify-content-between">
        <div class="social-login__button">
          <%= link_to("Login with Facebook", 
              user_facebook_omniauth_authorize_path, class: 'social social__facebook') %>
        </div>
        <div class="social-login__button">
          <%= link_to("Login with Google", 
              user_google_oauth2_omniauth_authorize_path, class: 'social social__google') %>
        </div>
      </div>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <!-- <%= f.error_notification %> -->
      <div class="form-wrapper__body">
        <%= f.input :email, required: false, autofocus: true %>
        <div class="form-group password optional user_password">
          <div class="d-flex justify-content-between align-items-center">
            <label class="control-label password optional" for="user_password">Password</label>
            <small class="text-muted" style="margin-bottom: .5rem;">
              <%= link_to("Forgot your password?", new_user_password_path) %>
            </small>
          </div>
          <input class="form-control password optional" name="user[password]" id="user_password" type="password">
        </div>

        <small class="text-muted">Having troubles? <%= link_to("Click here", '#') %></small>
      </div>

      <div class="form-wrapper__footer d-flex align-items-baseline justify-content-between">
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        <button type="submit" class="">
          Login
          <!-- <%= open_iconic 'icon ic-white', :account_login %> -->
        </button>
      </div>
    <% end %>
      <p class="text-center mt-3"></p>
      <p class="text-center mt-1">Need an account? Get one <%= link_to("here", new_user_registration_path) %></p>
  </div>
</div>